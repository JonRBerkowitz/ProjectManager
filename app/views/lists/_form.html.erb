
<%= form_for [@user, @list] do |f| %>
  <div class="row">
    <div class="col-md-4">
    </div>
    <div class="col-md-4 task-box">

      <!-- Edit Title-->
      <div class="row list-title-box">
        <span class="list-title">
          <%= f.text_field :title, class: "list-title-edit", placeholder: "Enter Title..." %>
        </span>
      </div>

      <!-- Edit Due Date -->
      <div class="row due-box">
        <span class="due-date">Due:

        </span>
      </div>

      <!--Edit tasks-->
      <div class="row list-tasks">
        <ul>
          <li><%= f.text_field :due_date, class: "task-edit", placeholder: "Enter Task..." %></li>
        </ul>
      </div>

      <!--Task List Footer-->
      <div class="row list-footer-box">
        <button type="button" class="btn-sm btn-outline-secondary list-button float-right ml-auto">ADD TASK</button>
        <button type="button" class="btn-sm btn-outline-secondary list-button float-right">SAVE</button>
      </div>

    </div>

    <div class="col-md-4">
    </div>
  </div>
<% end %>
